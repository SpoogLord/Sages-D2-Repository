/* Sage's vault analyzer super end-game edition | highlights trash | keeps top >.01% armor V2.52*/ 

(
	(
		is:weapon -is:exotic -is:crafted -(source:raid -is:patternunlocked deepsight:harmonizable) ((-is:wishlist) or (is:wishlist is:patternunlocked)) -is:maxpowerloadout -is:wishlistunknown
	)
	or 
	(
		(is:armor -is:exotic -is:classitem -is:inloadout -is:equipped -is:maxpowerloadout
			(
				-(basestat:highest&secondhighest:>=26 basestat:secondhighest:>=24)
				-(basestat:highest&secondhighest&thirdhighest:>=19.66 basestat:secondhighest:>=18)
				-(basestat:highest&secondhighest&thirdhighest&fourthhighest:>=15.5 basestat:fourthhighest:>=15)
			)
		)
	)
	or
	(is:statlower)
	or 
	(is:classitem energycapacity:<10 -(source:raid -(is:dupelower)) -is:exotic -is:maxpowerloadout) 
)
-(is:tagged -tag:junk -(tag:infuse -(power:pinnaclecap) or -(is:maxpower))) -(is:common or is:uncommon or is:rare)
